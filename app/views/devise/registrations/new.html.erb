<h2><%= t("links.sign_up") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: User.human_attribute_name(:name) %>
  </div>

  <div class="field">
    <%= f.text_field :username, autocomplete: "username", placeholder: User.human_attribute_name(:username) %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: User.human_attribute_name(:email) %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: User.human_attribute_name(:password) %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: User.human_attribute_name(:password_confirmation) %>
  </div>

  <div class="actions">
    <%= f.submit t("links.sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
